    <div class="wrapper row-offcanvas row-offcanvas-left">
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="left-side sidebar-offcanvas">
            <!-- sidebar: style can be found in sidebar.less -->
            {% if app.session.get('username') != '' %}
                <section class="sidebar">
                    <!-- Sidebar user panel -->
                    {% if app.session.get('username') != '' %}
                        <div class="user-panel">
                            <div class="pull-left image">
                                {% image 'bundles/goldtaskapp/images/avatar6.jpg' output='/images/avatar6.jpg' %}
                                <img src="{{ asset_url }}" class="img-circle" alt="User Image" />
                                {% endimage %}	                            
                            </div>						
                            <div class="pull-left info">
                                <p>Hello, {{ app.session.get('user_name') }}</p>
                                <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                            </div>						
                        </div> 
                    {% endif %}
                    <!-- sidebar menu: : style can be found in sidebar.less -->
					{% set items = { 'PendingBalanceAdminCallCenter': 'Outstanding Balance', 'cmmissedappointment': 'Missed Appointments', 'treatment_callcenter': 'Outstanding Treatments', 'PendingBalanceAdminCallCenter': 'Outstanding Balance', 'smmissedappointment': 'Missed Appointments',  
		'treatment_staff': 'Outstanding Treatments', 'PendingBalanceAdminStaff': 'Outstanding Balance','ReceivedAppointments': 'Received Appointments','ReceivedProductivity': 'Received Productivity','ScheduledAppointments':'Scheduled Appointments' } %}
                    {% for key, value in items %}	
						{% if key != app.request.attributes.get('_route') %}							
							<div class="navbar-default sidebar" role="navigation">
								<div class="sidebar-nav navbar-collapse">
									<ul class="nav" id="side-menu">								
										{% set items = { 'myprofile': 'My Profile', 'usersview': 'Seller View', 'usersupdate': 'Seller Update', 'register': 'Seller Registration', 'userslist': 'Sellers', 
				'officeslist': 'Shops', 'addOffice': 'Add Shop', 'officeupdate': 'Update Shop', 'officeview': 'View Shop',
				'changepassword': 'Change Password' } %}
										{% for key, value in items %}	
											{% if key == app.request.attributes.get('_route') %}
												<li  class="active"><a href="{{ app.request.getSchemeAndHttpHost() }}/goldtask/web/app_dev.php/{{ key }}"><i class="fa fa-th"></i> {{ value }} </a></li>
											{% endif %}
										{% endfor %}                                                       
									</ul>	
								</div>
							</div>
						{% endif %}
					{% endfor %}
                </section> 
            {% endif %} 
        </aside>
        <!-- Right side column. Contains the navbar and content of the page -->
        <aside class="right-side">
        {% block bodyheader %}{% endblock %}                 
		</aside><!-- /.right-side -->
