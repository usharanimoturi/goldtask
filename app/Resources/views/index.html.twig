<body class="pace-done skin-blue">
    <!-- header logo: style can be found in header.less -->
    <header class="header">
        <a href="{{ app.request.getSchemeAndHttpHost() }}/goldtask" class="logo">Jewel Street</a>			      
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top" role="navigation"> 
			<div class="navbar navbar-default navbar-fixed-top">
				<div class="container">
					<div class="navbar-header">          
						<a href="{{ app.request.getSchemeAndHttpHost() }}/goldtask" class="navbar-btn sidebar-toggle"><i class="fa fa-home"></i></a>
					</div>        
					<div class="navbar-collapse collapse navigacija navbar-ex1-collapse">
						<ul id="menu-header" class="nav navbar-nav navbar-left">
							{% if app.session.get('userroleid')==1 %}							
							<li id="menu-item-174" class="menu-item-174"><a href="{{ path('userslist') }}">Sellers</a></li>
							<li id="menu-item-174" class="menu-item-174"><a href="{{ path('officeslist') }}">Shops</a></li>
                            <li id="menu-item-174" class="menu-item-174 dropdown"><a href="#" data-toggle="dropdown" class="dropdown-toggle">Reports<span class="caret"></span></a>
							</li>
							{% endif %}
							{% if app.session.get('userroleid')==2 or app.session.get('userroleid')==3 or app.session.get('userroleid')==4 or app.session.get('userroleid')==5 %}								
                                                                								
                                                                <li id="menu-item-174" class="menu-item-174 dropdown"><a href="#" data-toggle="dropdown" class="dropdown-toggle">Reports<span class="caret"></span></a>
								
							</li>
							{% endif %}							
								
						</ul>
						<!-- Sidebar toggle button--> 
						<ul class="nav navbar-nav navbar-right">
							<!-- User Account: style can be found in dropdown.less -->
							<li class="dropdown user user-menu">							
								{% if app.session.get('username') == '' %}							
									<a href="{{ path('login') }}">
										<i class="glyphicon glyphicon-user"></i>
										<span>Login<i class="caret"></i></span>
									</a>								
								{% endif %}
								{% if app.session.get('username') != '' %}
									<a href="#" class="dropdown-toggle" data-toggle="dropdown">
										<i class="glyphicon glyphicon-user"></i>
										<span>{{ app.session.get('username') }}<i class="caret"></i></span>
									</a>						
									<ul class="dropdown-menu">
										<!-- User image -->
										<li class="user-header bg-light-blue">
											{% image 'bundles/goldtaskapp/images/avatar6.jpg' output='/images/avatar6.jpg' %}
											<a href="{{ path('changepassword') }}"><img src="{{ asset_url }}" alt="goldtask" title="goldtask" class="img-circle" width="100" /></a>
												{% endimage %}											
											<p>
												{{ app.session.get('user_name') }} - {{ app.session.get('userRoleName') }} 
												<small>Member since </small>
											</p>
										</li> 
										<!-- Menu Body -->
										<li class="user-body">
											<div class="col-xs-12 text-center">	
												<a href="{{ path('changepassword') }}">Change Password</a>
											</div>																			
										</li>									
										<!-- Menu Footer-->
										<li class="user-footer">
											<div class="pull-left">
												<a href="{{ path('myprofile') }}" class="btn btn-default btn-flat">Profile</a>
											</div>
											<div class="pull-right">
												<a href="{{ path('logout') }}" class="btn btn-default btn-flat">Sign out</a>
											</div>
										</li>
									</ul>
								{% endif %}								
							</li>
						</ul>
					</div> 
				</div>
			</div>            
