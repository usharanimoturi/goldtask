{% extends "::index.html.twig" %}
{% block title %}Jewel Street::SHOP LIST{% endblock %}
{% block jsscript %}	
	<script type="text/javascript">		
            $(function() {                
                $('#example1').dataTable();
            });
	</script>
{% endblock %}
{% block bodyheader %}
    <section class="content-header">
		<h1>Offices</h1>
		<ol class="breadcrumb">
			<li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>			
			<li class="active">Shops</li>
		</ol>
	</section>
	<!-- Main content -->
	<section class="content">
		<div class="row">
			<div class="col-xs-12">
				<div class="box">
					<div class="box-header">
						<h3 class="box-title">List</h3>
						<div class="muted pull-left" style="float:right !important;padding-top:10px !important;padding-right:10px !important;"><a class="btn btn-primary" href="{{ path('addOffice') }}" style="color:white !important;"><i class="fa fa-plus"></i>Add Office</a></div>
					</div><!-- /.box-header -->
					<div class="box-body">
						<table id="example1" class="table table-bordered table-striped">						
							<thead>
								<tr>
									<th>#</th>
									<th>Name</th>																			
									<th>Status</th>
									<th>Actions</th>										
								</tr>
							</thead>
							<tbody>	
								{%for office in data%}
								<tr  class="gradeA">								
									<td>{{ (loop.index0) + 1 }}</td>								
									<td>{{office.legalName|title}}</td>							
									<td>
										{% if office.isActive == 1 %}
											Active
										 {% endif %}
										 {% if office.isActive == 0 %}
											Inactive
										{% endif %}
									</td>
									<td>
										<a href={{ path('officeview',{'id':office.id }) }}>
										{% image 'bundles/goldtaskapp/images/view.png' output='View' %}
										<img src="{{ asset_url }}" alt="JEWEL STREET" width="20" height="20" />
										{% endimage %}
										</a>
										<a href={{ path('officeupdate',{'id':office.id } ) }}>
										{% image 'bundles/goldtaskapp/images/edit.png' output='Edit' %}
										<img src="{{ asset_url }}" alt="JEWEL STREET" width="20" height="20" />
										{% endimage %}											
										</a>																										   
										<a href={{ path('officedelete',{'id':office.id }) }}>
										{% image 'bundles/goldtaskapp/images/delete.png' output='Delete' %}
										<img src="{{ asset_url }}" alt="JEWEL STREET" width="20" height="20" />
										{% endimage %}											
										</a>
									</td>
								</tr>
								{% endfor %}									
							</tbody>
						</table>
					</div><!-- /.box-body -->
				</div><!-- /.box -->
			</div>
		</div>
	</section><!-- /.content -->   
{% endblock %}
