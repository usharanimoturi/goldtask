{% extends "::index.html.twig" %}
{% block title %}Jewel Street::SHOP LIST{% endblock %}
{% block jsscript %}	
	<script type="text/javascript">		
            $(function() {                
                $('#example1').dataTable();
            });
			
	</script>
{% endblock %}
{% block bodyheader %}
    <section class="content-header">
		<h1>Reports</h1>
		<ol class="breadcrumb">
			<li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>			
			<li class="active">Shops</li>
		</ol>
	</section>
	<!-- Main content -->
	<section class="content">
		<div class="row">
			<div class="col-xs-12">
				<div class="box">
					<div class="box-header">					
						<h3 class="box-title">List</h3>
						{% if user_role_id == 4 or user_role_id == 5 %}
						<div class="muted pull-left" style="float:right !important;padding-top:10px !important;padding-right:10px !important;"><a class="btn btn-primary" href="{{ path('clockin') }}" style="color:white !important;"><i class="fa"></i>Clock In</a>
						<a class="btn btn-primary" href="{{ path('customer') }}" style="color:white !important;"><i class="fa fa-plus"></i>Add Customer</a>
						</div>
					{% endif %}	
					</div><!-- /.box-header -->
					<div class="box-body">
						<table id="example1" class="table table-bordered table-striped">						
							<thead>
								<tr>
									<th>#</th>
									<th>First Name</th>
									<th>Last Name</th>	
									<th>Sell Date</th>		
									<th>Status</th>
									<th>Weight</th>										
								</tr>
							</thead>
							<tbody>	
								{%for clockin in data%}
								<tr  class="gradeA">								
									<td>{{ (loop.index0) + 1 }}</td>								
									<td>{{ clockin.first_name|title }}</td>	
									<td>{{ clockin.last_name|title }}</td>
									<td>{{ clockin.start_date }}</td>									
									<td>
										{% if clockin.is_status == 1 %}
											Active
										 {% endif %}
										 {% if clockin.is_status == 0 %}
											Inactive
										{% endif %}
									</td>
									<td>
										89
									</td>
								</tr>
								{% endfor %}									
							</tbody>
						</table>
					</div><!-- /.box-body -->
				</div><!-- /.box -->
			</div>
		</div>
	</section><!-- /.content -->   
{% endblock %}
